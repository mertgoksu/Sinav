<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="12dp"
    android:background="#FFFFFF">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center">

       <TextView
           android:id="@+id/title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Teknoloji Fakültesi"
           android:textSize="36sp"
           android:textStyle="bold"
           android:textColor="#000000"
           android:layout_marginBottom="32dp" />

       <Button
           android:id="@+id/btnToast"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="#3A3A3A"
           android:text="Teknoloji Fakültesi"
           android:layout_marginBottom="16dp" />

       <LinearLayout
           android:id="@+id/layoutBolumler"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:visibility="gone"
           android:layout_marginBottom="16dp"
           android:gravity="center">

           <Button
               android:id="@+id/btnAgac"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:backgroundTint="#3A3A3A"
               android:layout_weight="1"
               android:text="Ağaç İşleri End."
               android:layout_marginEnd="8dp" />

           <Button
               android:id="@+id/btnBilisim"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:backgroundTint="#3A3A3A"
               android:layout_weight="1"
               android:text="Bilişim Sis."
               android:layout_marginEnd="8dp" />

           <Button
               android:id="@+id/btnEnerji"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:backgroundTint="#3A3A3A"
               android:text="Enerji Sis." />
       </LinearLayout>


       <LinearLayout
           android:id="@+id/layoutCamera"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_camera"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_camera" />

           <Button
               android:id="@+id/btnCamera"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Kamera Aç"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A" />
       </LinearLayout>


       <LinearLayout
           android:id="@+id/layoutWp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:visibility="visible"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_wp"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_wp"
               >
           </ImageView>

           <Button
               android:id="@+id/btnWhatsapp"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="WhatsApp Gönder"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A"
               android:layout_marginBottom="16dp" />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/layoutDizin"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_dizin"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_add_files" />

           <Button
               android:id="@+id/btnDizin"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Dizin Oluştur"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A" />
       </LinearLayout>



       <LinearLayout
           android:id="@+id/layoutDizinleriGor"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_dizinleri_gor"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_show_files" />

           <Button
               android:id="@+id/btnDizinleriGor"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Dizinleri Göster"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A" />
       </LinearLayout>


       <LinearLayout
           android:id="@+id/layoutKonum"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_location"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_my_location" />

           <Button
               android:id="@+id/btnKonum"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Harita Konum"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A"
               android:layout_marginBottom="16dp" />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/layoutKonumlariGor"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_horizontal">

           <ImageView
               android:id="@+id/ic_konumlari_gor"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_location" />

           <Button
               android:id="@+id/btnKonumlariGor"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="Konumları Göster"
               android:textColor="#FFFFFF"
               android:backgroundTint="#3A3A3A"
               android:layout_marginBottom="16dp" />
       </LinearLayout>


       <LinearLayout
           android:id="@+id/layoutSinav"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:layout_marginBottom="16dp"
           android:gravity="center_vertical">

           <ImageView
               android:id="@+id/ic_sinav"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/ic_paper" />

           <TextView
               android:id="@+id/txtSinavBasligi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Sınav Adı:"
               android:textSize="20sp"
               android:textColor="#000000"
               android:layout_marginStart="12dp"
               android:gravity="center_vertical" />
       </LinearLayout>


   </LinearLayout>


</LinearLayout>
